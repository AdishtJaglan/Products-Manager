<%- include("../partials/headers") %>

<body>
    <div class="container mt-5">
        <h1 class="text-center text-primary">Your Product!</h1>

        <ul class="list-group">
            <li class="list-group-item"><b>Product Name:</b>
                <%= findProduct.name %>
            </li>
            <li class="list-group-item"><b>Price:</b>
                <%= findProduct.price %>
            </li>
            <li class="list-group-item">
                <b>Category:</b> <a href="/products?category=<%= findProduct.category %>"
                    class="text-decoration-none text-info">
                    <%= findProduct.category %>
                </a>
            </li>
        </ul>

        <div class="mt-4">
            <b><a href="/products" class="btn btn-secondary">All Products</a></b>
            <br>
            <b><a href="/products/<%= findProduct.id %>/edit" class="btn btn-warning">Edit Product</a></b>
            <br>
            <form action="/products/<%= findProduct._id %>?_method=DELETE" method="POST" class="mt-3">
                <button type="submit" class="btn btn-danger">Delete Product</button>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"></script>
</body>

</html>